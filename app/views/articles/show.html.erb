<p id="notice"><%= notice %></p>

<div class="container-fluid show-page">
  <div class= "image"><%= image_tag(@article.image_url, class: "img-fluid") unless @article.image_url.nil? %></div>
  <h2><%= @article.title %></h2>
  <h6><%= @article.description %></h6>
  <p><%= @article.content %></p>
  <%= render 'new_comment' %>
</div>
<%= render 'comments' %>


<%= link_to 'Edit', edit_article_path(@article), :class => "show" %> |
<%= link_to 'Back', articles_path, :class => "back" %>
