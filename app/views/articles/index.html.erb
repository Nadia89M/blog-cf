<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th class="image-text">Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= image_tag(article.image_url, class: "img-fluid box") unless article.image_url.nil? %></td>
        <td><%= link_to 'Show', article, :class => "edit-product"%></td>
        <td><%= link_to 'Edit', edit_article_path(article), :class => "edit-product"%></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, :class => "edit-product"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path, :class => "new" %>
